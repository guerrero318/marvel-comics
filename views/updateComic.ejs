<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <!-- Bootstrap CSS Stylesheet -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!-- CSS Stylesheet -->
    <link rel="stylesheet" href="/css/nav.css" />
     <!-- Footer Icon CDN -->
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
     <!-- Comic Font -->
     <link rel="stylesheet" href="https://use.typekit.net/lop6dey.css" />
  </head>

  <body class="comic-style-bckgrnd grey-bckgrnd">
    
    <!-- Navbar (see views folder) -->
    <header><%- include("./nav-bar"); %></header>
    <!-- <div class="container-fluid update-img"></div> -->
    <!-- <div class="container mt-3">
      <a href="/comics" class="allComics">All Comics</a>
    </div> -->

    <h4 class="big2 text-center">Edit Comic</h4>
    <main class="container">
      <div class="">
        <form action="/api/v1/marvelcomics" method="POST" id="update_comic" class="mt-5">
          <div class="mb-3">
            <label for="title" class="big3 form-label">Title</label>
            <input type="hidden" name="id" value="<%= data._id  %>" />
            <input id="title" type="text" value="<%= data.title  %>" class="form-control"name="title"/>
          </div>
          <div class="mb-3">
            <label for="photo" class="big3 form-label">Image URL</label>
            <input id="photo" type="text" class="form-control" name="photo" value="<%= data.photo %>" />
          </div>
          <!-- <div class="mb-3">
            <label for="cost" class="big3 form-label">Price</label>
            <input
              id="cost"
              type="text"
              class="form-control"
              name="cost"
              value="<%= data.cost  %>"
            /> -->
          </div>
          <div class="mb-3">
            <label for="description" class="big3 form-label">Description</label>
            <textarea class="form-control" id="description" name="description">
            <%= data.description  %></textarea
            >
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
        </form>
      </div>
    </main>

    <!-- Footer (see views folder) -->
    <footer> <%- include("./footer"); %></footer>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
      <!-- JQuery CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/index.js"></script>
  </body>
</html>
