<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <!-- Bootstrap CSS Stylesheet -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!-- CSS Stylesheet -->
    <link rel="stylesheet" href="/css/nav.css" />
    <!-- Footer Icon CDN -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/> -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Comic Font Import -->
    <link rel="stylesheet" href="https://use.typekit.net/lop6dey.css">
  </head>

  <body class="comic-style-bckgrnd grey-bckgrnd">

    <!-- Navbar (see views folder) -->
    <header>
      <%- include("./nav-bar"); %>
    </header>

    <!-- Add Comic Form -->
    <h4 class="big2 text-center">Add a comic</h4>
    <main class="container">
      <div class="">
        <form action="/api/v1/marvelcomics" method="POST" class="mt-5">
          <div class="mb-3">
            <label for="title" class="big3 form-label" style="font-weight: bolder;">Title</label>
            <input id="title" type="text" class="form-control" name="title" placeholder="Enter title of desired comic" />
          </div>
          <div class="mb-3">
            <label for="photo" class="big3 form-label" style="font-weight: bolder;">Image</label>
            <input id="photo" type="text" class="form-control" name="photo" placeholder="Enter image URL of desired comic" />
          </div>
          <!-- <div class="mb-3">
            <label for="cost" class="big3 form-label" style="font-weight: bolder;">Price</label>
            <input id="cost" type="text" class="form-control" name="cost" placeholder="Enter price of the new comic" />
          </div> -->
          <div class="mb-3">
            <label for="description" class="big3 form-label" style="font-weight: bolder;">Description</label>
            <textarea class="form-control" id="description" name="description" placeholder="Enter description of the desired comic "></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </main>
    
    <!-- Footer (see views folder) -->
    <footer> <%- include("./footer"); %></footer>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>